resource_name = "menu"
script/source = "extends Node2D

var fade_out: bool = false
var fade_in: bool = false

var game: bool = false
var credits: bool = false
var quit: bool = false

@onready var fader: ColorRect = $CanvasLayer/Fader


func _ready():
	fader.visible = true
	fader.color.a = 1.0

	# Remove \"Quit\" button from menu if it's Web port
	if Global.is_web:
		$CanvasLayer/Container/VBox/Buttons/Quit.queue_free()

	fade_out = true


func _process(delta: float):
	if fade_out:
		fader.color.a -= delta * 2.0
		if fader.color.a <= 0.0:
			fader.color.a = 0.0
			fader.visible = false
			fade_out = false

	if fade_in:
		fader.visible = true
		fader.color.a += delta * 2.0
		if fader.color.a >= 1.0:
			fader.color.a = 1.0
			fade_in = false

			if game:
				get_tree().change_scene_to_file(\"res://scenes/game.tscn\")

			if credits:
				get_tree().change_scene_to_file(\"res://scenes/credits.tscn\")

			if quit:
				get_tree().quit()


func _input(event: InputEvent):
	if event.is_action_pressed(\"Menu\"):
		fade_out = false
		fade_in = true
		quit = true


func _on_load_pressed():
	# TODO: Make button function and Save & Load feature
	pass


func _on_start_pressed():
	fade_in = true
	game = true


func _on_credits_pressed():
	fade_in = true
	credits = true


func _on_quit_pressed():
	fade_in = true
	quit = true
"

